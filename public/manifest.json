{
  "manifest_version": 3,
  "name": "Job Triage",
  "version": "0.1.0",
  "description": "Local-first job listing triage tool for solo developers",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.ashbyhq.com/*",
        "https://*.workable.com/*",
        "https://jobs.*/*",
        "https://careers.*/*"
      ],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options/index.html",
  "action": {
    "default_title": "Job Triage Settings"
  }
}
