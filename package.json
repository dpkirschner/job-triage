    "fake-indexeddb": "^6.2.3",
    "happy-dom": "^20.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-static-copy": "^3.1.3",
    "vitest": "^3.2.4"
  }
